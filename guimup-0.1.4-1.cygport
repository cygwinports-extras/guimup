inherit gnome2

DESCRIPTION="GTKmm client for the Music Player Daemon"
HOMEPAGE="http://www.coonsden.com/"
SRC_URI="mirror://sourceforge/musicpd/Guimup-${PV}src.tar.gz"
SRC_DIR="Guimup-${PV}src"

src_install() {
	cd ${B}
	cyginstall ${PN}docdir=/usr/share/doc/${P}

	for size in 16 24 32 48
	do
		insinto /usr/share/icons/hicolor/${size}x${size}/apps
		newins ${S}/src/grafix/Pics/mn_icon${size}.png ${PN}.png
	done

	make_desktop_entry ${PN} Guimup ${PN} "AudioVideo;Audio;Player;GTK"
}
